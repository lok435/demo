#!groovy
pipeline{
 agent any
 {
  stages
  {
    stage
     {
       steps
       {
         script
         {
           sh 'sudo yum install httpd -y'
           sh 'sudo yum install git -y'
         }
       }
     }
  stages('2')
  {
    stages
    {
     stage
     {
      steps
      {
        script
        {
         sh 'sudo rm -rf /var/www/html/*
         sh"sudo cp -r /var/lib/jenkins/demo-pipeline/* /var/www//html/"
         sh'sudo service httpd start'
        }
      }
     }
    }
   }   
